<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="TeamChat.SignupPage">
	<ContentPage.Content>
		<StackLayout Padding="0,100,0,0" 
		BackgroundColor="#FFA733" 
		VerticalOptions="FillAndExpand" 
		Spacing="20">

			<Label Text="Create a Team Chat account"
			FontSize="23" HorizontalOptions="Center" />

		<StackLayout HorizontalOptions="FillAndExpand"
				Spacing="10">
			<Entry Placeholder="First name"   />
			<Entry Placeholder="Last name" />
			<Entry Placeholder="Email"/>
			<Entry Placeholder="Password"/>
			<Entry Placeholder="Confirm password"/>

		</StackLayout>

			<StackLayout Orientation="Horizontal"
			HorizontalOptions="CenterAndExpand"
			Spacing="30">

		
			<Button x:Name="signUp"  
			Text="Sign up!" TextColor="#FFA733"
			BackgroundColor="White" BorderRadius="15"
			HeightRequest="40" WidthRequest="150" />
			
		</StackLayout>
			</StackLayout>
	</ContentPage.Content>
</ContentPage>
